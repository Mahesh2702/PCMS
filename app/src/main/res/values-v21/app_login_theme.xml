<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appLoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/pcmsPrmry</item>
    <item name="colorPrimaryDark">@color/pcmsPrmryLight</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    </style>

    <style name="titleBarHeading" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#8BC34A</item>
    </style>

    <style name="titleBarBackground">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0px</item>
    </style>

</resources>